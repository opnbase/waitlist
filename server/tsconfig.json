{
  "compilerOptions": {
    "target": "ES2020",  // Updated to a more recent ECMAScript target for better support of new JS features
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,  // Allows importing of .json files directly
    "lib": ["ESNext"],  // Uses the latest ECMAScript features in the lib for type checking
    "declaration": true,  // Generates .d.ts files from your TypeScript files, useful if you're writing a library
    "sourceMap": true,  // Generates source map files for debugging
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"],  // Exclude test files if present
  "typeRoots": ["./node_modules/@types", "./src/types"],  // Specify type definition files location
}
